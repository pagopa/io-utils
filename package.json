{
  "name": "italia-utils",
  "version": "2.1.0",
  "description": "Tools and utilities for the Digital Citizenship project",
  "repository": "https://github.com/teamdigitale/italia-utils",
  "author": "https://teamdigitale.governo.it",
  "license": "MIT",
  "bin": {
    "gen-api-models": "dist/gen-api-models.js"
  },
  "files": [
    "dist/",
    "templates/"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf dist && tsc",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "test": "jest"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "nunjucks": "^3.1.2",
    "prettier": "^1.12.1",
    "swagger-parser": "^4.1.0",
    "swagger-schema-official": "^2.0.0-bab6bed"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "@types/nunjucks": "^3.0.0",
    "@types/prettier": "^1.12.0",
    "@types/swagger-parser": "^4.0.2",
    "@types/yargs": "^11.0.0",
    "danger": "^3.5.1",
    "danger-plugin-digitalcitizenship": "^0.2.0",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.5",
    "typescript": "^2.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ]
  }
}
